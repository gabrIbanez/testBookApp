<%= simple_form_for(@author) do |form| %>
  <% if author.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(author.errors.count, "error") %> prohibited this author from being saved:</h2>

      <ul>
      <% author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  </div>

  <div class="field">
    <div class="row">
      <div class="col-xs-6">
        <%= form.input :first_name, label: "Prénom" %>
      </div>
      <div class="col-xs-6">
        <%= form.input :last_name, label: 'Nom' %>
        
      </div>
    </div>
  </div>

  <div class="field">
    <%= form.input :birth_date, as: :date, label: "Date de Naissance de l'auteur :", :use_month_names => ['janvier', 'février',
      'mars', 'avril', 'mai', 'juin', 'juillet', 'août', 'septembre', 'octobre', 'novembre', 'décembre'] %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>

  <div class="actions">
    <div class="row">
      <div class="col-xs-3"></div>
      <%= form.submit 'Mettre à Jour', class: 'btn btn-primary col-xs-6' %>
      <div class="col-xs-3"></div>
    </div>
      
  </div>
<% end %>
