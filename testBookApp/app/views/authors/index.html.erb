<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Birth date</th>
      <th>City</th>
      <th>Nb of book published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.first_name %></td>
        <td><%= author.last_name %></td>
        <td><%= author.birth_date %></td>
        <td><%= author.city %></td>
        <td><%= author.nb_of_book_published %></td>
        <td><%= link_to 'Show', author, class: 'btn btn-info' %> | <%= link_to 'Edit', edit_author_path(author), class: 'btn btn-primary' %> | <%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path, class: 'btn btn-primary' %> |
<%= link_to 'Back', root_path, class: 'btn btn-danger' %>

